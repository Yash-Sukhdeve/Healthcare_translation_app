{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python",
      }
    ],
    "routes": [
      {
        "src": "/upload",
        "dest": "app.py",
        "methods": ["POST"]
      },
      {
        "src": "/translate",
        "dest": "app.py",
        "methods": ["POST"]
      },
      {
        "src": "/(.*)",
        "dest": "app.py"
      }
    ]
  }
